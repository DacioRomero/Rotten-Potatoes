<!-- views/movies-show.handlebars -->

<div class="row">
    <div class="col-sm-4">
        <img class="img-fluid" src="https://image.tmdb.org/t/p/w500{{movie.poster_path}}"/>
    </div>
    <div class="col-sm-8">
        <h1>{{movie.title}}</h1>
        <p class="lead">{{movie.overview}}</p>
    </div>
    <div class="col-sm-12 embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{movie.trailer_youtube_id}}?rel=0"></iframe>
    </div>
</div>
<div>
<div class="container clearfix pt-2">
    <h3 class="float-left">Reviews</h3>
    <a href="/movies/{{movie.id}}/reviews/new" class="btn btn-primary float-right">Write Review</a>
</div>

{{#each reviews}}
    {{> review }}
{{/each}}
