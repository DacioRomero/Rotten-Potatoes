<!-- views/partials/reviews-form.handlebars -->

<fieldset>
    <legend>New Review</legend>
    <!-- TITLE -->
    <div class="form-group">
        <label for="review-title">Title</label><br>
        <input class="form-control" id="review-title" type="text" name="title" value="{{review.title}}" />
    </div>

    <!-- MOVIE TITLE -->
    <div class="form-group">
        <label for="movie-title">Movie Title</label><br>
        <input class="form-control" id="movie-title" type="text" name="movieTitle" value="{{review.movieTitle}}" />
    </div>

    <!-- DESCRIPTION -->
    <div class="form-group">
        <label for="description-text">Description</label><br>
        <textarea class="form-control" id="description-text" name="description" rows="10" >{{review.description}}</textarea>
    </div>

    <!-- RATING -->
    <div class="form-group">
        <label for="stars-number">Stars</label><br>
        <select class="form-control" id="stars-number" name="starsNumber" value="{{review.stars}}">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save Review</button>
        <a class="btn btn-primary" href="/">Cancel</a>
    </div>
</fieldset>
